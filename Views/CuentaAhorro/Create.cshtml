@model ModeloPadre
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h1 class="text-center">Registro de Cuentas de Ahorro</h1>
    </div>
</div>

<div>
    <div class="card-body">
        <form asp-controller="CuentaAhorro" asp-action="Insert" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="cuenta.Cliente_id"> </label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(c => c.cuenta.Cliente_id, Model.ListaClientes, "Por favor elige una", new { @class = "Form-Control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Guardar Cambios</button>
                            &nbsp;
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>

                </div>

            </div>
           
        </form>
    </div>
</div>

