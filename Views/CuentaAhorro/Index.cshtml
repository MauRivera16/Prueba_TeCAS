
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" row">
    <div class="col-6">

        <h3>Listado de Cuentas de ahorro</h3>
    </div>
    <div class="col-6">

        <a  asp-controller="CuentaAhorro" asp-action="Create" class="btn btn-success">
            Crear Cuenta de ahorro
        </a>
    </div>

</div>
<table id="TablaCuentas" class="table table-striped table-bordered" style="width:100%">

    <thead>

        <tr>
            <th>ID</th>
            <th>Matricula del Cliente</th>
            <th>Nombre del Cliente</th>
            <th>Saldo Disponible</th>
            <th>Acciones</th>

        </tr>
    </thead>

</table>

@section Scripts{
    <script src="~/js/cuenta.js"></script>

}