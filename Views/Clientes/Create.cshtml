@model Clientes
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Insertar Cliente</h3>
<form method="post" asp-controller="Clientes" asp-action="Insert" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="col-10 offset-2 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApellidoP"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="ApellidoP" class="form-control" />
                    <span asp-validation-for="ApellidoP" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApellidoM"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="ApellidoM" class="form-control" />
                    <span asp-validation-for="ApellidoM" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Genero"> </label>
                </div>
                <div class="col-8">
                    @*DropDown List*@
                    @Html.DropDownListFor(i => i.Genero, new SelectList(Enum.GetNames(typeof(Genero))), "-Selecciona un Genero-", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Matricula"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="Matricula" class="form-control" placeholder="ABC-000" />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="Botones" />
                </div>

            </div>

        </div>
    </div>
</form>

